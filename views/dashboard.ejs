
<%- include('partials/header.ejs'); %>

<main class="container">
	<div class="py-5">
		<h2>Recruiting Estimates</h2>
		<p class="lead">
			Hiring is hard, and as a non-profit you can't compete with the big guys on salary and benefits.
			This tool was designed to make it possible for you to know what you need to effectively
			source and attract powerful talent. 
		</p>
		
	</div>

	<div class="row">
		<div class="col-md-4 order-md-2 mb-4">
			<h4 class="d-flex justify-content-between align-items-center mb-3">
				<span class="text-muted">Location</span>
				<span class="badge badge-secondary badge-pill">3</span>
			</h4>

			<!-- <form class="card p-2" action="/import_contracts/">
				<div class="input-group">
					<button type="submit" class="btn btn-primary">Import Contracts</button>
				</div>
			</form> -->

			<ul class="list-group mb-3">
				<li class="list-group-item d-flex justify-content-between lh-condensed">
					<div class="text-success">
						<h6 class="my-0">Augusta, GA</h6>
						<!-- <small class="text-muted">Brief description</small> -->
					</div>
					
				</li>

				<li class="list-group-item d-flex justify-content-between lh-condensed">
					<div>
						<h6 class="my-0">Chicago, IL</h6>
						<!-- <small class="text-muted">Brief description</small> -->
					</div>
				</li>

			</ul>

			
		</div>

		<div class="col-md-8 order-md-1">
			<h4 class="mb-3">Recruiting Inputs</h4>
			
			<form class="needs-validation" novalidate action="/estimate" method="post">

			<div class="mb-3">
				<label for="role">Role</label>
				<div class="input-group">
					<input type="text" class="form-control" name="role" id="role" placeholder="Software Engineer" value="" required>
					<div class="invalid-feedback" style="width: 100%;">
						Role is required
					</div>
				</div>
			</div>

			<div class="mb-3">
				<label for="location">Location</label>
				<div class="input-group">
					<select name="location" id="location">
						<option value="Augusta, GA">Augusta, GA</option>
						<option value="Chicago, IL" disabled>Chicago, IL</option>
					</select>
				</div>
			</div>

			<hr class="mb-4">

			<h4 class="mb-3">Seniority and Budget</h4>

			<div class="mb-3">
				<label for="seniority">Seniority</label>
				<div class="input-group">
					<select name="seniority" id="seniority">
						<option value="entry">Entry Level</option>
						<option value="junior">Junior</option>
						<option value="mid">Mid-Leve</option>
						<option value="senior">Senior</option>
					</select>
				</div>
			</div>

			<div class="mb-3">
				<div class="custom-control custom-checkbox">
					<input type="checkbox" class="custom-control-input" name="management" id="management">
					<label class="custom-control-label" for="management">Management Position?</label>
				</div>
			</div>

			<div class="mb-3">
				<label for="budget">Salary Budget</label>
				<div class="input-group">
					<input type="text" class="form-control" name="budget" id="budget" placeholder="$100,000" value="" required>
					<div class="invalid-feedback" style="width: 100%;">
						Salary is required
					</div>
				</div>
			</div>

			<hr class="mb-4">
			
			<div class="custom-control custom-checkbox">
				<input type="checkbox" class="custom-control-input" name="use_recruiter" id="use_recruiter">
				<label class="custom-control-label" for="use_recruiter">Use Recruiting Vendor</label>
			</div>
		
			<hr class="mb-4">
			
			<button class="btn btn-primary btn-lg btn-block" type="submit">Generate Estimate</button>
			
			</form>
		</div>

	</div>

</main>

<%- include('partials/footer.ejs'); %>